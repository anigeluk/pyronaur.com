---
import { blog } from "@data/post"
import Blog from "@layouts/blog";
import Preview from "@components/blog/preview";

const posts = blog( await Astro.fetchContent('../content/**/*.md') );
---

<Blog title="@pyronaur">
	<div class="container">
		{posts.map((p) => <Preview post={p} />)}
	</div>
</Blog>
