---
	import Date from "@components/utilities/Date";
	import type { Post } from '@data/post';
	const post: Post = Astro.props.post
---

<article>
	<a class="preview" href={`/${post.slug}`}>
		
		<div class="top">
			<div class="post-title">
				<h2>{post.title}</h2>
			</div>
		</div>

		<div class="content">{post.preview}</div>

		<b>Read More</b>
	</a>
</article>

<style lang="scss">
	.post-title h2 { 
		font-size: 1.3rem;
		font-weight: 600;
	}
	a { 
		color: var( --text-color-alt );
		text-decoration: none;
		display: block;
	}

	a:hover {
		h2 {
			color: var( --link-color-hover);
		}
	}

	.content {
		margin-bottom: 20px;
	}

	.read-more {
		text-decoration: none;
		font-weight: 500;
		font-size: .85rem;
		color: var( --text-color);
	}

	.preview {
		margin-bottom: 40px;
	}

	b {
		font-weight: 600;
		font-size: 0.925rem;
	}
</style>